{
  "type": "module",
  "name": "nextjs-responsive-template",
  "version": "1.0.0",
  "description": "A production-ready Next.js template with mobile-first design, authentication, and modern tooling",
  "author": "Johan Kaito",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "migrate:drizzle:create": "set -a; [ -f .env ] && source .env; set +a; drizzle-kit generate --schema=src/lib/db/schema.ts --dialect=postgresql",
    "migrate:drizzle:push": "set -a; [ -f .env ] && source .env; set +a; drizzle-kit push",
    "migrate:drizzle:execute": "set -a; [ -f .env ] && source .env; set +a; sh -c 'psql \"$DATABASE_URL\" -f $SQL_FILE'",
    "migrate:drizzle:policies": "SQL_FILE=supabase/rls-policies.sql pnpm migrate:drizzle:execute",
    "migrate:storage:policies": "SQL_FILE=supabase/storage-policies.sql pnpm migrate:drizzle:execute",
    "migrate:triggers": "SQL_FILE=supabase/triggers.sql pnpm migrate:drizzle:execute",
    "migrate:policies": "pnpm migrate:drizzle:policies && pnpm migrate:storage:policies",
    "migrate:all": "pnpm migrate:drizzle:create && pnpm migrate:drizzle:push && pnpm migrate:policies && pnpm migrate:triggers",
    "prepare": "husky install",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@shadcn/ui": "^0.0.4",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.8",
    "@tabler/icons-react": "^3.33.0",
    "@tanstack/react-query": "^5.77.2",
    "@tanstack/react-table": "^8.21.3",
    "class-validator": "^0.14.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.6",
    "humps": "^2.0.1",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.56.4",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@astrotask/mcp": "^1.3.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tanstack__react-query": "link:@types/@tanstack__react-query",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/humps": "^2.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "3.2.2",
    "@vitest/ui": "3.2.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "next": "15.4.7",
    "preset": "link:@shadcn/ui/preset",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
